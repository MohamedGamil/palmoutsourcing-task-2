# Proxy Service Configuration
PROXY_SERVICE_HOST=proxy-service
PROXY_SERVICE_PORT=7001
PROXY_SERVICE_PROTOCOL=http
PROXY_SERVICE_TIMEOUT=10
PROXY_SERVICE_MAX_RETRIES=3
PROXY_SERVICE_CACHE_TTL=60
PROXY_SERVICE_CACHE_ENABLED=true
PROXY_SERVICE_FALLBACK_ENABLED=true

# Scraping Configuration
# Proxy Settings
SCRAPING_PROXY_ENABLED=false
SCRAPING_PROXY_TIMEOUT=30
SCRAPING_PROXY_CONNECT_TIMEOUT=10
SCRAPING_PROXY_RETRY_ATTEMPTS=3
SCRAPING_PROXY_MAX_ATTEMPTS=3

# Request Settings
SCRAPING_REQUEST_TIMEOUT=60
SCRAPING_CONNECT_TIMEOUT=10
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_REQUEST_MAX_ATTEMPTS=3
SCRAPING_RETRY_DELAY=1

# User Agent Settings
SCRAPING_USER_AGENT_ROTATION_ENABLED=true
SCRAPING_USER_AGENT_DEFAULT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# Platform-Specific Settings
SCRAPING_AMAZON_ENABLED=true
SCRAPING_AMAZON_TIMEOUT=45
SCRAPING_AMAZON_RETRY_ATTEMPTS=5
SCRAPING_AMAZON_MAX_ATTEMPTS=5

SCRAPING_JUMIA_ENABLED=true
SCRAPING_JUMIA_TIMEOUT=30
SCRAPING_JUMIA_RETRY_ATTEMPTS=3
SCRAPING_JUMIA_MAX_ATTEMPTS=3

# Error Handling
SCRAPING_LOG_ERRORS=true
SCRAPING_LOG_LEVEL=error
SCRAPING_RETRY_ON_RATE_LIMIT=true
SCRAPING_MAX_CONSECUTIVE_FAILURES=5
SCRAPING_FAILURE_BACKOFF_MULTIPLIER=2
SCRAPING_CIRCUIT_BREAKER_ENABLED=true
SCRAPING_CIRCUIT_BREAKER_THRESHOLD=10

# Rate Limiting
SCRAPING_RATE_LIMITING_ENABLED=true
SCRAPING_MAX_REQUESTS_PER_MINUTE=30
SCRAPING_DELAY_BETWEEN_REQUESTS_MS=2000
SCRAPING_BURST_LIMIT=5

# Data Validation
SCRAPING_STRICT_VALIDATION=false
SCRAPING_MIN_TITLE_LENGTH=3
SCRAPING_MAX_TITLE_LENGTH=500
SCRAPING_MIN_PRICE=0.01
